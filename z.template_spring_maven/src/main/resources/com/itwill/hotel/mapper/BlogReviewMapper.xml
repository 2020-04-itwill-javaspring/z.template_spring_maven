<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.hotel.mapper.BlogReviewMapper">
	<select id="selectAll" resultType="BlogReview">
	select brNo,brDate,brContent,mNo,BNo,brStep,brGroup,brDepth
	from blog_review
	</select>
	
	<select id="selectOne" resultType="BlogReview">
	select brNo,brDate,brContent,mNo,BNo,brStep,brGroup,brDepth
	from blog_review
	where brNo=#{brNo} 
	</select>
	
	<insert id="insertBlogReview" parameterType="BlogReview">
	insert into blog_review(brNo,brDate,brContent,brStep,brGroup,brDepth,mNo)
	values (blog_review_SEQ.nextval,#{brDate},#{brContent},#{brStep},#{brGroup},#{brDepth},#{mNo})
	</insert>
	
	<delete id="deleteBlogReview" parameterType="_int">
	delete from blog_review
	where brNo=#{brNo} 
	</delete>
	
	<update id="updateBlogReview" parameterType="BlogReview">
	update blog_review
	set brContent=#{brContent}, brDate=sysdate 
	where brNo=#{brNo}
	</update>
	
</mapper>